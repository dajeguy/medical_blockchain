{
   "extends":"@tsconfig/node14/tsconfig.json",
   "compilerOptions": {
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "outDir": "dist",
       "moduleResolution": "node",
       "declaration": true,
       "sourceMap": true,
       "noImplicitAny": false,
       "allowJs": true,
       "checkJs": false,
       "strictPropertyInitialization": false

   },
   "include": [
       "./src/**/*"
   ],
   "exclude": [
       "./src/**/*.spec.ts"
   ]
}
